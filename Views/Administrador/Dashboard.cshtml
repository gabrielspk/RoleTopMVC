@model RoleTopMVC.ViewModels.DashboardViewModel
<main>
                <h2>Dashboard</h2>
        
                <section id="status-pedidos">
                    <h3>Eventos Cadastrados</h3>
                    <div id="painel">
                        <div class="box-status-pedidos aprovados">
                            <h4>Aprovados</h4>
                            <p>@Model.EventosAprovados</p>
                        </div>
                        <div class="box-status-pedidos pendentes">
                            <h4>Pendentes</h4>
                            <p>@Model.EventosPendentes</p>
                        </div>
                        <div class="box-status-pedidos reprovados">
                            <h4>Reprovados</h4>
                            <p>@Model.EventosReprovados</p>
                        </div>
                    </div>
                </section>
        
                <section id="lista-pedidos">
                    <h3>Tipo de eventos</h3>
                    <table>
                        <thead>
                            <tr>
                                <th rowspan="2">Nome do cliente</th>
                                <th rowspan="2">Tipo do evento</th>
                                <th colspan="2">Data e hora do evento</th>
                                <th colspan="2" rowspan="2">Aprovar</th>
                            </tr>
                            <tr>
                                <th><i class="far fa-calendar"></i></th>
                                <th><i class="far fa-clock"></i></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <td colspan="6">
                                    <p>Pedidos atualizados em @DateTime.Now</p>
                                </td>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach(var evento in Model.Eventos)
                            {

                            <tr>
                                <td>@evento.Cliente.Nome</td>
                                <td>@evento.TipoEvento.Nome</td>
                                <td>@evento.Convidados.Nome</td>
                                <td>14/09/2019</td>
                                <td><a href='@Url.Action("Aprovar", "Evento", new {id = @evento.Id})'><i class="fas fa-check"></i></a></td>
                                <td><a href='@Url.Action("Reprovar", "Evento", new {id = @evento.Id})'><i class="fas fa-times"></i></a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </section>
        
            </main>